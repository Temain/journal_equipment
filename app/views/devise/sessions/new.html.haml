.container-fluid.main
  .row.center-row
    .col-md-4.col-md-offset-4.center.jumbotron
      = image_tag("logo2.png", class: "logo")
      %h2.title Журнал учета оборудования
      %hr.divider
      -#%i.glyphicon.glyphicon-search
      #flash-display
        - flash.each do |type, msg|
          %div{:class => "alert alert-#{type == :notice ? "success" : type} fadeout", "data-dismiss" => "alert"}
            %button.close &times;
            = msg if msg.is_a?(String)
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .left-inner-addon
          %i.glyphicon.glyphicon-user
          = f.email_field :email, class: "form-control form-field", placeholder: "Введите имя пользователя...", autofocus: true
        .left-inner-addon
          %i.glyphicon.glyphicon-lock
          = f.password_field :password, class: "form-control form-field", placeholder: "Введите пароль...", autocomplete: "off"
        = button_tag  class: "btn btn-primary sign-in" do
          %span Войти
          %i.glyphicon.glyphicon-log-in
  %footer.row
    .col-md-12
      %p © 2014 ФГБОУ ВПО «Кубанский государственный аграрный университет»

