.container-fluid
  .row.menu
    .col-md-12
      .pull-right
        .menu-item
          = link_to user_root_path do
            = fa_icon "user 2x", class: "text-muted", title: "Профиль"
        .menu-item
          = link_to destroy_user_session_path, method: :delete do
            = fa_icon "power-off 2x", class: "text-muted", title: "Выйти"
  .row
    .col-md-6.col-md-offset-3
      %h1.title Equipment history
  .row
    .col-md-12
      %div{ id: "timelineContainer", class: "timelineContainer" }
        %div{ class: "timelineMajor" }
          %h2{ class: "timelineMajorMarker" } Major Marker
          %dl{ class: "timelineMinor" }
            %dt{ id:"event01" }
              %a Event
            %dd{ class: "timelineEvent", id: "event01EX", style: "display: none; " }
              %p Content about the event goes here.
          %dl{ class: "timelineMinor" }
            %dt{ id: "event02" }
              %a Another Event
            %dd{ class: "timelineEvent", id: "event02EX", style: "display: none; " }
              %p Content about the other event.
