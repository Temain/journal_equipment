.container-fluid
  .header
    .row.menu
      .col-md-12.col-xs-12
        .pull-right
          .menu-item
            = link_to new_equipment_path, method: :get do
              = fa_icon "plus-square 2x", class: "text-muted", title: "Добавить оборудование"
          .menu-item
            = link_to user_root_path do
              = fa_icon "user 2x", class: "text-muted", title: "Профиль"
          .menu-item
            = link_to destroy_user_session_path, method: :delete do
              = fa_icon "power-off 2x", class: "text-muted", title: "Выйти"

    .row
      .col-md-6.col-md-offset-3
        %h1.title Список оборудования
    .row
      .col-md-12
        %nav
          %ul.navigation
            %li.nav-item.active
              = button_tag "Все", class: "filter link", data: { filter: "all" }
            - @categories.each_with_index do |c, index|
              %li.nav-item
                = button_tag c.name, class: "filter link", data: { filter: ".category-#{index}" }
                -#.btn-group
                -#  = button_tag class: "filter link", type: "button", data: { toggle: "dropdown" } do
                -#    = c.name
                -#    %span.caret
                -#  %ul.dropdown-menu
                -#    - c.equipment_types.each do |type|
                -#      %li
                -#        = link_to type.name, "#"

  .row
    .col-md-6.col-md-offset-3
      #flash-display
        - flash.each do |type, msg|
          %div{:class => "alert alert-dismissable alert-#{type == "notice" ? "success" : "danger" }", "data-dismiss" => "alert"}
            %button.close &times;
            = msg if msg.is_a?(String)

      = form_tag(equipment_index_path, method: :get, class: "search-form") do
        .input-group
          %span.input-group-addon.dark
            %i.glyphicon.glyphicon-search
          = text_field_tag :search, params[:search], class: "form-control", placeholder: "Введите строку поиска..."
          %span.input-group-btn
            = submit_tag "Поиск", class: "btn btn-primary", name: nil

      -# Dropdown categories
      -#.btn-group
      -#  =button_tag class: "btn btn-default dropdown-toggle", type: "button", data: { toggle: "dropdown" } do
      -#    Dropdown
      -#    -#%span.caret
      -#  %ul.dropdown-menu
      -#    %p ddfgdfg
      -#    %p rterterter 2

      -#=button_tag "Filter", class: "filter", data: { filter: ".category-0" }
      = render partial: 'relocation'
      = render partial: 'repair'

      #Container
        =render partial: 'container'

  .page-buffer
