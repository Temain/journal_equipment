= content_tag :div, class: "item mix category-#{item.equipment_type.category.id - 1}" do
  .actions
    = link_to 'javascript:;', class: "repair-link" do
      = fa_icon "wrench", class: "text-muted", title: "В ремонт", "data-toggle" => "modal", "data-target" => "#repair_modal", id: item.id, equipment_type_id: item.equipment_type.id
    = link_to 'javascript:;' do
      = fa_icon "exchange", class: "text-muted", title: "Переместить", "data-toggle" => "modal", "data-target" => "#relocation_modal", id: item.id
    = link_to edit_equipment_path(item.id) do
      = fa_icon "pencil", class: "text-muted", title: "Редактировать"
    = link_to history_path(item.id), method: :get do
      = fa_icon "clock-o", class: "text-muted", title: "История"
    = link_to equipment_path(item.id), method: :delete do
      = fa_icon "trash-o", class: "text-muted", title: "Удалить"
    = link_to 'javascript:;', class: "actions-link", id: item.id do
      = fa_icon "bars", class: "text-muted", title: "Действия", id: item.id

  .name= item.full_name
  .inventory= "Инвентарный номер: #{item.inventory_number}"
  .bottom
    .department= "Подразделение: #{item.department.name}"
    .created_at= "Добавлен: #{item.created_at.strftime("%d.%m.%Y")}"
    - if item.writed_off?
      .writed_off= Списан